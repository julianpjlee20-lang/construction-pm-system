# Supabase 配置（從 Supabase Dashboard 取得）
# https://app.supabase.com/project/_/settings/api

# Supabase URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key（公開金鑰，可放在前端）
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key（私密金鑰，只能在後端使用）
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Storage Bucket 名稱
SUPABASE_STORAGE_BUCKET=construction-photos

# Google Drive 備份配置（選用）
GOOGLE_DRIVE_CLIENT_ID=your-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token
GOOGLE_DRIVE_BACKUP_FOLDER_ID=your-backup-folder-id

# Server 配置
PORT=8096
NODE_ENV=production
